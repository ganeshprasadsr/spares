<h1>Editing company</h1>

<% form_for(@company) do |f| %>
  <%= f.error_messages %>

  <p>
    <%= f.label :name %><br />
    <%= f.text_field :name %>
  </p>
  <p>
    <%= f.label :website %><br />
    <%= f.text_field :website %>
  </p>
  <p>
    <%= f.label :status %><br />
    <%= f.text_field :status %>
  </p>
  <p>
    <%= f.label :description %><br />
    <%= f.text_area :description %>
  </p>
  
    <% fields_for @company.location do |f| %>
	    <p>
	    <%= f.label :line1 %><br />
	    <%= f.text_field :line1 %>
	  </p>
	  <p>
	    <%= f.label :line2 %><br />
	    <%= f.text_field :line2 %>
	  </p>
	  <p>
	    <%= f.label :city %><br />
	    <%= f.text_field :city %>
	  </p>
	  <p>
	    <%= f.label :state %><br />
	    <%= f.text_field :state %>
	  </p>
	  <p>
	    <%= f.label :pin %><br />
	    <%= f.text_field :pin %>
	  </p>
	  <p>
	    <%= f.label :country %><br />
	    <%= f.text_field :country %>
	  </p>
	<% end %>

  
  <p>
    <%= f.submit "Update" %>
  </p>
<% end %>

